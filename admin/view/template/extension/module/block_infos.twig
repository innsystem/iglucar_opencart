{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-name">{{ entry_name }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_block_infos_name" value="{{ module_block_infos_name }}" placeholder="{{ entry_name }}" id="input-name" class="form-control" />
              {% if error_name %}
              <div class="text-danger">{{ error_name }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ text_status }}</label>
            <div class="col-sm-10">
              <select name="module_block_infos_status" id="input-status" class="form-control">
                {% if module_block_infos_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <hr>
          <div class="table-responsive">
            <table id="blocks" class="table table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <td class="text-left">{{ entry_title }}</td>
                  <td class="text-left">{{ entry_text }}</td>
                  <td class="text-left">{{ entry_image }}</td>
                  <td class="text-left">{{ entry_border_color }}</td>
                  <td></td>
                </tr>
              </thead>
              <tbody>
                {% set block_row = 0 %}
                {% for block in module_block_infos_block %}
                <tr id="block-row-{{ block_row }}">
                  <td class="text-left">
                    <div class="{% if error_blocks[block_row]['title'] %}has-error{% endif %}">
                      <input type="text" name="module_block_infos_block[{{ block_row }}][title]" value="{{ block.title }}" placeholder="{{ entry_title }}" class="form-control" />
                      {% if error_blocks[block_row]['title'] %}
                      <div class="text-danger">{{ error_blocks[block_row]['title'] }}</div>
                      {% endif %}
                    </div>
                  </td>
                   <td class="text-left">
                    <div class="{% if error_blocks[block_row]['text'] %}has-error{% endif %}">
                      <input type="text" name="module_block_infos_block[{{ block_row }}][text]" placeholder="{{ entry_text }}" value="{{ block.text }}" class="form-control">
                       {% if error_blocks[block_row]['text'] %}
                      <div class="text-danger">{{ error_blocks[block_row]['text'] }}</div>
                      {% endif %}
                    </div>
                  </td>
                   <td class="text-left">
                    <div class="">
                        <a href="" id="thumb-image{{ block_row }}" data-toggle="image" class="img-thumbnail"><img src="{{ block.thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                        <input type="hidden" name="module_block_infos_block[{{ block_row }}][image]" value="{{ block.image }}" id="input-image{{ block_row }}" />
                    </div>
                  </td>
                   <td class="text-left">
                    <div class="">
                        <input type="color" name="module_block_infos_block[{{ block_row }}][border_color]" value="{{ block.border_color }}" class="form-control" />
                    </div>
                  </td>
                  <td class="text-left">
                    <button type="button" onclick="$(\"#block-row-' + block_row + '\").remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button>
                  </td>
                </tr>
                {% set block_row = block_row + 1 %}
                {% endfor %}
              </tbody>
              <tfoot>
                <tr>
                  <td colspan="4"></td>
                  <td class="text-left"><button type="button" onclick="addBlock();" data-toggle="tooltip" title="{{ text_add_block }}" class="btn btn-primary"><i class="fa fa-plus-circle"></i></button></td>
                </tr>
              </tfoot>
            </table>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--
var block_row = {{ block_row }};

function addBlock() {
	var row_count = $('#blocks tbody tr').length;

	if (row_count < 4) {
    	html = '';
    	html += '<tr id="block-row-' + block_row + '">';
    	html += '  <td class="text-left"><div class="form-group{% if error_blocks[block_row]['title'] %} has-error{% endif %}"><input type="text" name="module_block_infos_block[' + block_row + '][title]" value="" placeholder="{{ entry_title }}" class="form-control" />{% if error_blocks[block_row]['title'] %}<div class="text-danger">{{ error_blocks[block_row]['title'] }}</div>{% endif %}</div></td>';
    	html += '  <td class="text-left"><div class="form-group{% if error_blocks[block_row]['text'] %} has-error{% endif %}"><textarea name="module_block_infos_block[' + block_row + '][text]" placeholder="{{ entry_text }}" class="form-control"></textarea>{% if error_blocks[block_row]['text'] %}<div class="text-danger">{{ error_blocks[block_row]['text'] }}</div>{% endif %}</div></td>';
    	html += '  <td class="text-left"><div class="form-group"><a href="" id="thumb-image' + block_row + '" data-toggle="image" class="img-thumbnail"><img src="{{ placeholder }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a><input type="hidden" name="module_block_infos_block[' + block_row + '][image]" value="" id="input-image' + block_row + '" /></div></td>';
    	html += '  <td class="text-left"><div class="form-group"><input type="color" name="module_block_infos_block[' + block_row + '][border_color]" value="#000000" class="form-control" /></div></td>';
    	html += '  <td class="text-left"><button type="button" onclick="$(\'#block-row-' + block_row + '\').remove(); checkBlockLimit();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
    	html += '</tr>';

		$('#blocks tbody').append(html);

		block_row++;
		checkBlockLimit();
	} else {
        alert('Você atingiu o limite máximo de 4 blocos.');
    }
}

function checkBlockLimit() {
    var row_count = $('#blocks tbody tr').length;
    if (row_count >= 4) {
        $('.btn-primary i.fa-plus-circle').closest('button').prop('disabled', true).addClass('hidden');
    } else {
        $('.btn-primary i.fa-plus-circle').closest('button').prop('disabled', false).removeClass('hidden');
    }
}

$(document).ready(function() {
    checkBlockLimit();
});
//--></script>
