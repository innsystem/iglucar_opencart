		dataType: 'html',
		beforeSend: function() {
			$('#button-image{{ filter_row }}-{{ language.language_id }}-{{ loop.index0 }}').button('loading');
		},
		complete: function() {
			$('#button-image{{ filter_row }}-{{ language.language_id }}-{{ loop.index0 }}').button('reset');
		},
		success: function(html) {
			$('body').append('<div id="modal-image" class="modal">' + html + '</div>');
			
			$('#modal-image').modal('show');
			
			$('#modal-image').delegate('a.thumbnail', 'click', function(e) {
				e.preventDefault();
				
				var imagePath = $(this).parent().find('input').val();
				$('#input-image{{ filter_row }}-{{ language.language_id }}-{{ loop.index0 }}').val(imagePath);
				
				// Atualizar preview com caminho correto
				var preview = $('#input-image{{ filter_row }}-{{ language.language_id }}-{{ loop.index0 }}').closest('.filter-image-item').find('.filter-image-preview');
				preview.html('<img src="./../image/' + imagePath + '" alt="{{ entry_image }}" class="img-thumbnail" style="max-width: 50px; max-height: 50px;" />');
				
				$('#modal-image').modal('hide');
			});
		}
	});
});
{% endfor %}
{% endif %}
{% endfor %}
{% endfor %}
