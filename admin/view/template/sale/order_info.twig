	  },
	  error: function(xhr, ajaxOptions, thrownError) {
		  alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
	  }
  });

  $('#history').delegate('.pagination a', 'click', function(e) {
	  e.preventDefault();

	  $('#history').load(this.href);
  });

  $('#history').load('index.php?route=sale/order/history&user_token={{ user_token }}&order_id={{ order_id }}');

  $('#button-history').on('click', function() {
	  $.ajax({
		  url: '{{ catalog }}index.php?route=api/order/history&api_token={{ api_token }}&store_id={{ store_id }}&order_id={{ order_id }}',
		  type: 'post',
		  dataType: 'json',
		  data: 'order_status_id=' + encodeURIComponent($('select[name=\'order_status_id\']').val()) + '&notify=' + ($('input[name=\'notify\']').prop('checked') ? 1 : 0) + '&override=' + ($('input[name=\'override\']').prop('checked') ? 1 : 0) + '&append=' + ($('input[name=\'append\']').prop('checked') ? 1 : 0) + '&comment=' + encodeURIComponent($('textarea[name=\'comment\']').val()),
		  beforeSend: function() {
			  $('#button-history').button('loading');
		  },
		  complete: function() {
			  $('#button-history').button('reset');
		  },
		  success: function(json) {
			  $('.alert-dismissible').remove();

			  if (json['error']) {
				  $('#history').before('<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> ' + json['error'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
			  }

			  if (json['success']) {
				  $('#history').load('index.php?route=sale/order/history&user_token={{ user_token }}&order_id={{ order_id }}');

				  $('#history').before('<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> ' + json['success'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');

				  $('textarea[name=\'comment\']').val('');
			  }
		  },
		  error: function(xhr, ajaxOptions, thrownError) {
			  alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		  }
	  });
  });

  // Function to get URL parameter
  function getURLParameter(name) {
    return decodeURIComponent((new RegExp('[?|&]' + name + '=' + '([^&;]+?)(&|#|;|$)').exec(location.search) || [null, ''])[1].replace(/\+/g, '%20')) || null;
  }

  // Order Attachments functionality
  $('#btn-attachments').on('click', function() {
    var order_id = $(this).data('order-id');
    
    $.ajax({
      url: 'index.php?route=sale/order_attachment&user_token=' + getURLParameter('user_token') + '&order_id=' + order_id,
      type: 'GET',
      success: function(html) {
        $('#modal-container').html(html);
        $('#modal-order-attachments').modal('show');
      },
      error: function() {
        alert('Erro ao carregar anexos!');
      }
    });
  });
  
  /* ---------------- Attachments Tab Logic ---------------- */
  const uploadAreaTab = document.getElementById('upload-area-tab');
  if (uploadAreaTab) {
    const fileInputTab = document.getElementById('file-input-tab');
    const fileListTab = document.getElementById('file-list-tab');
    const uploadBtnTab = document.getElementById('btn-upload-tab');
    let selectedFilesTab = [];

    function formatFileSize(bytes) {
      if (bytes === 0) return '0 Bytes';
      const k = 1024;
      const sizes = ['Bytes', 'KB', 'MB', 'GB'];
      const i = Math.floor(Math.log(bytes) / Math.log(k));
      return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
    }

    function displayFilesTab() {
      fileListTab.innerHTML = '';
      selectedFilesTab.forEach((file, index) => {
        const div = document.createElement('div');
        div.className = 'file-item';
        div.innerHTML = `<div class="file-info"><i class="fa fa-file-o"></i> ${file.name} (${formatFileSize(file.size)})</div>
                          <button type="button" class="btn btn-xs btn-danger" onclick="selectedFilesTab.splice(${index},1);displayFilesTab();uploadBtnTab.disabled=selectedFilesTab.length===0;"><i class="fa fa-times"></i></button>`;
        fileListTab.appendChild(div);
      });
    }

    function handleFilesTab(files) {
      selectedFilesTab = files;
      displayFilesTab();
      uploadBtnTab.disabled = selectedFilesTab.length === 0;
    }

    uploadAreaTab.addEventListener('dragover', function(e){e.preventDefault();uploadAreaTab.classList.add('dragover');});
    uploadAreaTab.addEventListener('dragleave', function(e){e.preventDefault();uploadAreaTab.classList.remove('dragover');});
    uploadAreaTab.addEventListener('drop', function(e){e.preventDefault();uploadAreaTab.classList.remove('dragover');handleFilesTab(Array.from(e.dataTransfer.files));});

    fileInputTab.addEventListener('change', function(e){handleFilesTab(Array.from(e.target.files));});

    $('#form-attachment-upload').on('submit', function(e){
      e.preventDefault();
      if(selectedFilesTab.length===0){alert('Nenhum arquivo selecionado!');return;}
      const formData=new FormData();
      formData.append('order_id', '{{ order_id }}');
      selectedFilesTab.forEach(f=>formData.append('files[]',f));
      uploadBtnTab.disabled=true;uploadBtnTab.innerHTML='<i class="fa fa-spinner fa-spin"></i> Enviando...';
      $.ajax({url:'index.php?route=sale/order_attachment/upload&user_token='+getURLParameter('user_token'),type:'POST',data:formData,processData:false,contentType:false,dataType:'json',success:function(json){if(json.error){alert(json.error);}else{location.reload();}},error:function(){alert('Erro ao enviar arquivos!');},complete:function(){uploadBtnTab.disabled=false;uploadBtnTab.innerHTML='<i class="fa fa-upload"></i> Enviar Arquivos';}});
    });

    function loadExistingAttachments() {
      $.ajax({
        url: 'index.php?route=sale/order_attachment/getAttachments&user_token=' + getURLParameter('user_token') + '&order_id={{ order_id }}',
        type: 'GET',
        dataType: 'json',
        success: function(json) {
          if (json.attachments) {
            let html = '';
            if (json.attachments.length) {
              html += '<div class="table-responsive"><table class="table table-striped table-hover">';
              html += '<thead><tr>' +
                      '<th><i class="fa fa-file-o"></i> Nome do Arquivo</th>' +
                      '<th><i class="fa fa-calendar"></i> {{ text_date_added }}</th>' +
                      '<th>Ações</th>' +
                      '</tr></thead><tbody>';
              json.attachments.forEach(a => {
                html += `<tr data-attachment-id="${a.order_attachment_id}">` +
                        `<td><i class="fa fa-file-o"></i> ${a.filename}</td>` +
                        `<td>${a.date_added}</td>` +
                        `<td>` +
                        `<a href="${a.url}" target="_blank" class="btn btn-sm btn-info" title="Visualizar"><i class="fa fa-eye"></i></a> ` +
                        `<a href="${a.download_url}" target="_blank" class="btn btn-sm btn-info" title="Download"><i class="fa fa-download"></i></a> ` +
                        `<button type="button" class="btn btn-sm btn-danger" onclick="deleteAttachmentTab(${a.order_attachment_id})" title="Excluir"><i class="fa fa-trash"></i></button>` +
                        `</td></tr>`;
              });
              html += '</tbody></table></div>';
            } else {
              html = '<div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_no_attachments }}</div>';
            }
            $('#existing-attachments').html(html);
          }
        }
      });
    }

    function deleteAttachmentTab(attachmentId) {
      if (confirm('Essa ação não é possível ser desfeita!')) {
        $.ajax({
          url: 'index.php?route=sale/order_attachment/deleteAttachment&user_token=' + getURLParameter('user_token'),
          type: 'POST',
          data: { order_attachment_id: attachmentId },
          dataType: 'json',
          success: function(json) {
            if (json.error) {
              alert(json.error);
            } else {
              alert(json.success);
              loadExistingAttachments();
            }
          },
          error: function() {
            alert('Erro ao excluir anexo!');
          }
        });
      }
    }

    
    loadExistingAttachments();
  }
  /* ------------------------------------------------------ */
  //--></script>

