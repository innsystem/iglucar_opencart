<script type="text/javascript">
$(document).ready(function() {
    var searchTimeout;
    var moduleId = '{{ module_id|default("default") }}';
    var minLength = 3;
    var maxResults = 10;

    // Autocomplete para busca por veículo
    $('#vehicle-search-input-' + moduleId).on('input', function() {
        var query = $(this).val();
        clearTimeout(searchTimeout);

        if (query.length >= minLength) {
            searchTimeout = setTimeout(function() {
                $.ajax({
                    url: 'index.php?route=extension/module/vehicle_search/autocomplete',
                    type: 'get',
                    data: 'filter_name=' + encodeURIComponent(query) + '&max_results=' + maxResults,
                    dataType: 'json',
                    success: function(json) {
                        var html = '';
                        if (json.length > 0) {
                            html = '<ul class="dropdown-menu" style="display: block; position: absolute; width: 100%; z-index: 1000;">';
                            for (var i = 0; i < json.length; i++) {
                                html += '<li><a href="#" class="vehicle-suggestion" data-value="' + json[i].value + '">' + json[i].name + '</a></li>';
                            }
                            html += '</ul>';
                        }
                        $('#vehicle-search-results-' + moduleId).html(html);
                    }
                });
            }, 300);
        } else {
            $('#vehicle-search-results-' + moduleId).html('');
        }
    });

    // Selecionar sugestão
    $(document).on('click', '.vehicle-suggestion', function(e) {
        e.preventDefault();
        var value = $(this).data('value');
        $('#vehicle-search-input-' + moduleId).val(value);
        $('#vehicle-search-results-' + moduleId).html('');
        searchByVehicle(value);
    });

    // Buscar ao clicar no botão
    $('.btn-search').on('click', function() {
        var query = $('#vehicle-search-input-' + moduleId).val();
        if (query) {
            searchByVehicle(query);
        }
    });

    // Buscar ao pressionar Enter
    $('#vehicle-search-input-' + moduleId).on('keypress', function(e) {
        if (e.which == 13) {
            var query = $(this).val();
            if (query) {
                searchByVehicle(query);
            }
        }
    });

    function searchByVehicle(vehicleName) {
        // Primeiro, verificar se é um modelo de veículo conhecido
        $.ajax({
            url: 'index.php?route=extension/module/vehicle_search/autocomplete',
            type: 'get',
            data: 'filter_name=' + encodeURIComponent(vehicleName) + '&max_results=1',
            dataType: 'json',
            success: function(json) {
                var isVehicleModel = false;
                for (var i = 0; i < json.length; i++) {
                    if (json[i].name.toLowerCase() === vehicleName.toLowerCase()) {
                        isVehicleModel = true;
                        break;
                    }
                }

                if (isVehicleModel) {
                    // É um modelo de veículo, usar busca por filtro
                    var url = 'index.php?route=product/search&search=' + encodeURIComponent(vehicleName) + '&filter=' + encodeURIComponent(vehicleName);
                } else {
                    // Busca normal
                    var url = 'index.php?route=product/search&search=' + encodeURIComponent(vehicleName);
                }

                window.location.href = url;
            }
        });
    }

    // Fechar dropdown ao clicar fora
    $(document).on('click', function(e) {
        if (!$(e.target).closest('#vehicle-cover-section-' + moduleId).length) {
            $('#vehicle-search-results-' + moduleId).html('');
        }
    });
});

// Variáveis globais para a modal
var allModels = []; // Armazenar todos os modelos carregados
var currentManufacturerId = null;

// Função para abrir a modal de uma marca
function openBrandModal(manufacturerId, manufacturerName) {
    currentManufacturerId = manufacturerId;
    $('#brandModalLabel').text('Modelos da Marca: ' + manufacturerName);
    $('#brandModal').modal('show');
    loadBrandModels(manufacturerId);
}

// Função para carregar modelos de uma marca
function loadBrandModels(manufacturerId) {
    currentManufacturerId = manufacturerId;
    $('#modalModelsList').html('<div class="loading">Carregando modelos...</div>');
    $('#modalSearchInput').val(''); // Limpar busca anterior
    $('#modalClearBtn').hide();

    $.ajax({
        url: 'index.php?route=extension/module/vehicle_cover_section/getModels',
        type: 'get',
        data: 'manufacturer_id=' + manufacturerId,
        dataType: 'json',
        success: function(json) {
            allModels = json; // Armazenar todos os modelos
            displayModels(json);
        },
        error: function() {
            $('#modalModelsList').html('<div class="error">Erro ao carregar modelos</div>');
        }
    });
}

// Função para exibir modelos
function displayModels(models) {
    var html = '<div class="models-grid">';

    if (models.length > 0) {
        for (var i = 0; i < models.length; i++) {
            var modelName = models[i].name;
            var productsCount = models[i].products_count;

            html += '<div class="model-item">';

            if (productsCount == 1) {
                // Se tem apenas 1 produto, ir direto para ele
                html += '<a href="index.php?route=product/search&search=' + encodeURIComponent(modelName) + '&filter=' + encodeURIComponent(modelName) + '" class="model-link single-product">';
            } else if (productsCount > 1) {
                // Se tem múltiplos produtos, ir para página de busca
                html += '<a href="index.php?route=product/search&search=' + encodeURIComponent(modelName) + '&filter=' + encodeURIComponent(modelName) + '" class="model-link multiple-products">';
            } else {
                // Se não tem produtos, desabilitar
                html += '<span class="model-link no-products">';
            }

            html += modelName;

            if (productsCount > 0) {
                html += '<span class="products-count">(' + productsCount + ' produto' + (productsCount > 1 ? 's' : '') + ')</span>';
            } else {
                html += '<span class="no-products-text">(sem produtos)</span>';
            }

            html += '</' + (productsCount > 0 ? 'a' : 'span') + '>';
            html += '</div>';
        }
    } else {
        html += '<div class="no-models">Nenhum modelo encontrado</div>';
    }

    html += '</div>';
    $('#modalModelsList').html(html);
}

// Função para filtrar modelos em tempo real
function filterModels(searchTerm) {
    if (!searchTerm) {
        displayModels(allModels);
        return;
    }

    var filteredModels = allModels.filter(function(model) {
        return model.name.toLowerCase().includes(searchTerm.toLowerCase());
    });

    displayModels(filteredModels);
}

// Função para buscar modelo específico
function searchForModel(searchTerm) {
    // Buscar modelo exato primeiro
    var exactMatch = allModels.find(function(model) {
        return model.name.toLowerCase() === searchTerm.toLowerCase();
    });

    if (exactMatch) {
        // Se encontrou modelo exato, ir direto para ele
        var productsCount = exactMatch.products_count;
        if (productsCount > 0) {
            var url = 'index.php?route=product/search&search=' + encodeURIComponent(exactMatch.name) + '&filter=' + encodeURIComponent(exactMatch.name);
            window.location.href = url;
        }
    } else {
        // Se não encontrou exato, filtrar e mostrar resultados
        filterModels(searchTerm);
    }
}

// Eventos da modal
$(document).ready(function() {
    // Buscar modelos em tempo real
    $('#modalSearchInput').on('input', function() {
        var searchTerm = $(this).val().toLowerCase();
        filterModels(searchTerm);

        // Mostrar/ocultar botão de limpar
        if (searchTerm.length > 0) {
            $('#modalClearBtn').show();
        } else {
            $('#modalClearBtn').hide();
        }
    });

    // Botão de busca
    $('#modalSearchBtn').on('click', function() {
        var searchTerm = $('#modalSearchInput').val();
        if (searchTerm) {
            searchForModel(searchTerm);
        }
    });

    // Botão de limpar busca
    $('#modalClearBtn').on('click', function() {
        $('#modalSearchInput').val('');
        $('#modalClearBtn').hide();
        filterModels('');
    });

    // Buscar ao pressionar Enter
    $('#modalSearchInput').on('keypress', function(e) {
        if (e.which == 13) {
            var searchTerm = $(this).val();
            if (searchTerm) {
                searchForModel(searchTerm);
            }
        }
    });
});
</script>

