<div class="block-infos-module">
  <div class="row">
    {% for block in blocks %}
      <div class="col-sm-3">
        <div class="d-flex flex-wrap justify-content-between align-items-center gap-3 block-info" style="border: 1px solid {{ block.border_color }}; padding:8px 15px; border-radius: 10px;">
          {% if block.image %}
          <div class="img-block-info">
            <div class="img-block-info-circle" style="background: {{ block.border_color }}; opacity: 0.3;"></div>
            <img src="{{ block.image }}" alt="{{ block.title }}" class="img-responsive" style="max-width:50px; margin-bottom: 0px; display: inline-block;" />
          </div>
          {% endif %}
          <div class="flex-grow-1">
            <h3 class="h5 fw-bold m-0">{{ block.title }}</h3>
            <p class="fs-7 m-0">{{ block.text }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</div> 

<style>
    .img-block-info {
        position: relative;
    }
    .img-block-info-circle {
        content: '';
        width: 30px;
        height: 30px;
        border-radius: 100%;
        display: block;
        position: absolute;
        bottom: 0;
        left: -5px;
        z-index: -1;
    }
</style>